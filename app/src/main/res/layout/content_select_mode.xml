<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.whatever.whatever.SelectMode"
    tools:showIn="@layout/app_bar_select_mode">

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/complete_random_button"
        android:background="@drawable/all_random1"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/QR_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/ic_select_all_white_48dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/QR_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/visited_button"
        android:background="@drawable/all_random"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/QR_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp" />

</RelativeLayout>
